<div class="container">

  <table class="table">
    <thead>
      <tr>
        <th>Nom du projet</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |p| %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.get_status %></td>
          <td><%= link_to "Statistiques sur ce projet", stats_project_path(:id => p.id), :class => "btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Epices disponibles", stats_users_path, :class => "btn btn-default" %>
</div>