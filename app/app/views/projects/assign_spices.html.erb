<div class="container">
  <%= form_for(@project, :url => { action: "assign_spices_to_user" }, :method => "post", :html => {:class => "form-horizontal" }) do |f| %>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Nombre d'épices</label>
        <div class="col-sm-10">
          <%= f.number_field :spices, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Utilisateur</label>
        <div class="col-sm-10">
          <%= f.email_field :user, :class => "form-control", :value => "", :placeholder => @project.user.email %>
        </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-default">Attribuer des épices à l'utilisateur</button>
      </div>
  <% end %>
</div>