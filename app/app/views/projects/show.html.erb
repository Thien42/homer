<%= render 'form', disabled: true %>

<div class="container">
  <% if current_user != @project.user  && @project.kick_off_start? %>
    <h2>Soutenir ce projet</h2>
    <%= form_for(@project, :url => { action: "send_spices" }, :method => "post", :html => { :class=> "form-horizontal" }) do |f| %>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Nombre d'épices (max 5)</label>
        <div class="col-sm-10">
          <%= f.select :spices, [5, 15], {} %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Commentaire</label>
        <div class="col-sm-8">
          <%= f.text_field :name, :class => "form-control", :value => "", :required => true %>
        </div>
        <div class="col-sm-2">
          <button class="btn btn-default">Soutenir ce projet</button>
        </div>
      </div>
    <% end %>
  <% end %>

  <h2 class="text-center">Soutiens sur ce projet</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>épices</th>
        <th>commentaire</th>
      </tr>
    </thead>

    <tbody>
      <% @project.project_fundings.each do |p| %>
        <% if p.status == 4 %>
          <tr style="color: red;">
            <td><%= p.user.email %></td>
            <td><%= p.spices %></td>
            <td><%= p.comment %></td>
          </tr>
        <% elsif p.status != 3 %>
          <tr>
            <td><%= p.user.email %></td>
            <td><%= p.spices %></td>
            <td><%= p.comment %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
