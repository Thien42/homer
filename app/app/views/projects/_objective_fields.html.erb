<div class="nested-fields">
  <h2 class="text-center"><%= objective.objective_type %></h2>

  <div class="form-group field">
    <%= f.date_field :date, :class => "form-control datepicker", :required => true, :placeholder => "Date de rendu" %>
  </div>

  <div class="form-group field">
    <%= f.cktext_area :description, :class => "form-control", :required => true %>
  </div>

  <div class="hidden">
    <%= f.number_field :objective_type, :value => index %>
  </div>
</div>

<script type="text/javascript">
  $('.datepicker').datepicker({
    format: 'yyyy-mm-dd'
  });
</script>