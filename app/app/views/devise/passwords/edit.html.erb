
<div class="container">

  <h2 class="text-center">Changer de mot de passe</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "Nouveau mot de passe", :class => "col-sm-2" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> charactÃ¨res minimum)</em>
      <% end %>
      <div class="col-sm-10">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control" %>
      </div>

    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation du mot de passe", :class => "col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>
    </div>

    <div class="span7 text-center">
      <%= f.submit "Changer mon mot de passe", :class => "btn btn-default" %>
    </div>
  <% end %>
</div>